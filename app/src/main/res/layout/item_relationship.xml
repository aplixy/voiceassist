<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/item_relationship_imageview_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/level1"/>

    <TextView
        android:id="@+id/item_relationship_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="this is a default node"
        android:layout_toLeftOf="@+id/item_relationship_imageview_drag"
        android:layout_toRightOf="@+id/item_relationship_imageview_icon"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/item_relationship_imageview_drag"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:src="@drawable/drag"/>

</RelativeLayout>